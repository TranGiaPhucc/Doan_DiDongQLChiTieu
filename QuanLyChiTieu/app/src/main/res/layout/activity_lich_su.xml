<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".LichSu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbCapNhat"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:text="Cập nhật thông tin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNgayCapNhat"
        android:textSize="8pt"
        android:layout_below="@id/lbCapNhat"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/lbNgayCapNhat" />

    <TextView
        android:id="@+id/lbNgayCapNhat"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/lbCapNhat"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Ngày"
        android:textSize="10pt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSoTien"
        android:textSize="8pt"
        android:layout_below="@id/lbNgayCapNhat"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/lbNgayCapNhat" />

    <TextView
        android:id="@+id/lbSoTienCapNhat"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/lbNgayCapNhat"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Số tiền"
        android:textSize="10pt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNoiDungCapNhat"
        android:textSize="8pt"
        android:layout_below="@id/lbSoTienCapNhat"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/lbNgayCapNhat" />

    <TextView
        android:id="@+id/lbNoiDungCapNhat"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/lbSoTienCapNhat"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Nội dung"
        android:textSize="10pt" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btnLuuCapNhat"
        android:layout_below="@+id/soTienTB"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Lưu"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSoTienTB"
        android:textSize="8pt"
        android:layout_below="@id/lbNoiDungCapNhat"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/lbNgayCapNhat" />

    <TextView
        android:id="@+id/soTienTB"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/lbNoiDungCapNhat"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Số tiền TB"
        android:textSize="10pt" />



</RelativeLayout>