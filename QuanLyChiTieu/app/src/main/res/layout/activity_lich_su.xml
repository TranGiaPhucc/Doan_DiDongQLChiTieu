<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LichSu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lb_chitiet"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Lich su"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/lb_ngay"
        android:layout_below="@+id/lb_chitiet"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ngay"

        />

    <TextView
        android:id="@+id/ngay"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/lb_chitiet"
        android:layout_marginTop="20dp"
        android:text="ngay"
        android:textSize="10pt"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_sotien"
        android:layout_below="@+id/lb_ngay"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ngay"

        />

    <TextView
        android:id="@+id/sotien"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ngay"
        android:layout_marginTop="20dp"
        android:text="so tien"
        android:textSize="10pt"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_noidung"
        android:layout_below="@+id/sotien"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ngay"

        />

    <TextView
        android:id="@+id/noidung"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/sotien"
        android:layout_marginTop="20dp"
        android:text="Noi dung"
        android:textSize="10pt"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btn_luu"
        android:layout_below="@+id/soTienTB"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Luu"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_soTienTB"
        android:layout_below="@+id/noidung"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ngay"

        />

    <TextView
        android:id="@+id/soTienTB"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/noidung"
        android:layout_marginTop="20dp"
        android:text="So tien TB"
        android:textSize="10pt" />



</RelativeLayout>